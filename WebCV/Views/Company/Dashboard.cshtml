@model WebCV.Models.Company
<h1>Company Management</h1>


@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-light mt-lg-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-4 mb-sm-5">
                <div class="card card-style1 border-0">
                    <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4 mb-lg-0">
                                <img src="~/images/companies/@Model.Image" alt="Not Found">
                            </div>
                            <div class="col-lg-6 px-xl-10">
                                <div class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded">
                                    <h3 class="h2 text-white mb-0">@Model.CopmpanyName</h3>
                                </div>
                                <ul class="list-unstyled mb-1-9">
                                    <li class="mb-2 mb-xl-3 display-28">
                                        <a asp-area="" asp-controller="Job" asp-action="Create" asp-route-id="@Model.Link" class="btn btn-primary">Post a Job</a> 
                                        <a>Change Infomation</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
    </div>
</section>
