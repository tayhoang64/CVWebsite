{
    <script type="text/javascript">
        Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "@ViewBag.Error",
        });
    </script>
}

@if (ViewBag.Success != null)
{
    <script type="text/javascript">
        Swal.fire({
            title: "Good job!",
            text: "@ViewBag.Success",
            icon: "success"
        });
    </script>
}
