@model IEnumerable<WebCV.Models.Template>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
    @{
        foreach(var item in Model)
        {
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img src="~/images/templates/@item.Image" class="card-img-top" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <a asp-action="Edit" asp-route-id="@item.TemplateId" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.TemplateId" data-id="@item.TemplateId" class="btn btn-danger delete-btn">Delete</a>
                        </div>
                    </div>
                </div>
        }
        }
    </div>
</div>


