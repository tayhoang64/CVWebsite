@model WebCV.Models.Company

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bạn có chắc chắn xóa không? <br />Điều này sẽ không thể hoàn tác!</h3>
<div class="container">
<div>
    <h4>Company</h4>
        <div class="form-group">
            <label asp-for="CopmpanyName" class="control-label"></label>
            <input asp-for="CopmpanyName" class="form-control" />
            <span asp-validation-for="CopmpanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <img class="mt-2" src="~/images/companies/@Model.Image" width="50%" alt="Not Have Yet" />
        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Website" class="control-label"></label>
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hotline" class="control-label"></label>
            <input asp-for="Hotline" class="form-control" />
            <span asp-validation-for="Hotline" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Information" class="control-label"></label>
            <input asp-for="Information" disabled name="title" class="form-control" />
            <span asp-validation-for="Information"  class="text-danger"></span>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CompanyId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
