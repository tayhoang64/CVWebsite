@model WebCV.Models.Evaluate

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="container">

        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post" id="template-form" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EvaluateId" />
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <input asp-for="Content" disabled name="title" class="form-control" />
                        <span asp-validation-for="Content" id="title-error" class="text-danger"></span>
                    </div>
                    <span class="mt-4">
                        Image: <br />
                    </span>
                    <img class="mt-2" src="~/images/evaluates/@Model.Image" width="100%" alt="Not Have Yet" />
                    <div class="form-group">
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" disabled name="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </form>
            </div>

        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EvaluateId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>

</div>
