@model WebCV.Models.User
@using Microsoft.AspNetCore.Identity
@using WebCV.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "UserProfile";
    var CurrentUser = UserManager.GetUserAsync(User).Result;
}
<style>
    .container {
        background-color: #26BC89;
    }

    .vh-100 {
        min-height: 100vh;
    }

    .gradient-custom {
        background-image: linear-gradient(to right, #43cea2 0%, #185a9d 100%);
    }

    .avatar-img {
        width: 100px;
        border-radius: 50%;
        height: 100px;
    }

    .btn-change-avatar,
    .btn-edit-profile {
        margin-top: 10px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-change-avatar:hover,
        .btn-edit-profile:hover {
            transform: scale(1.1);
        }
</style>

<div class="container">
    <section class="vh-100" style="background-color: ;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                @if (string.IsNullOrEmpty(@CurrentUser.Avatar))
                                {
                                    <img src="~/images/avatars/defaultavatar.png"
                                         alt="Avatar" class="img-fluid my-5 avatar-img" />
                                }
                                else
                                {
                                    <img src="~/images/avatars/@CurrentUser.Avatar"
                                         alt="Avatar" class="img-fluid my-5 avatar-img" />
                                }
                                <h5 class="user-name">@CurrentUser.FullName</h5>
                                <button type="button" class="btn btn-info btn-lg btn-change-avatar" data-toggle="modal" data-target="#myModal">Change Avatar</button>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Gender</h6>
                                            @if (CurrentUser.Gender == 0)
                                            {
                                                <p class="text-muted">Male</p>
                                            }
                                            else
                                            {
                                                <p class="text-muted">Female</p>
                                            }
                                            <h6>Address</h6>
                                            <p class="text-muted">@CurrentUser.Address</p>
                                            <h6>Email</h6>
                                            <p class="text-muted">@CurrentUser.Email</p>
                                            <h6>Link</h6>
                                            <p class="text-muted">@CurrentUser.Link</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted">
                                                @{
                                                    if (!string.IsNullOrEmpty(@CurrentUser.PhoneNumber))
                                                    {
                                                        @CurrentUser.PhoneNumber
                                                    }
                                                }
                                            </p>
                                        </div>
                                    </div>
                                    <h6>@UserManager.GetUserAsync(User).Result.FullName CV</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-start">
                                        <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                                        <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                                        <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="User" asp-action="EditProfile" class="btn btn-primary btn-edit-profile">Edit User Profile</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Your Avatar</h4>
                </div>
                <div class="modal-body">
                    <form id="avatarForm" asp-action="ChangeAvatar" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Avatar</label>
                            <input type="file" name="avatar" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                        <div id="error-message" class="text-danger"></div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('.btn-change-avatar').hover(
            function () {
                $(this).addClass('btn-info');
            },
            function () {
                $(this).removeClass('btn-info');
            }
        );

        $('.btn-edit-profile').hover(
            function () {
                $(this).addClass('btn-warning');
            },
            function () {
                $(this).removeClass('btn-warning');
            }
        );
    });
</script>

